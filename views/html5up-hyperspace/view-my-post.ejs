		<link rel="stylesheet" href="assets/css/main.css" />
		<!--[if lte IE 9]><link rel="stylesheet" href="assets/css/ie9.css" /><![endif]-->
		<!--[if lte IE 8]><link rel="stylesheet" href="assets/css/ie8.css" /><![endif]-->

		<!-- Google Analytics -->
		<script>
		  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

		  ga('create', 'UA-93948712-1', 'auto');
		  ga('send', 'pageview');

		</script>

	</head>
	<body>

		<!-- Header -->
			<header id="header">
				<a href="/" class="title"><img class="logo" src="images/dounoa-network.jpg"></a>
				<nav>
					<ul>
						<li><a href="/">View all Searches</a></li>
						<li><a href="/post">Post a Search</a></li>
						<li><a href="/my-profile">My Profile</a></li>
						<li><a href="/logout">Logout</a></li>
					</ul>
				</nav>
			</header>

		<!-- Wrapper -->
			<div id="wrapper">

				<!-- Main -->
					<section id="main" class="wrapper">
						<div class="inner">
							<h1 class="major">I'm looking for a <%= search %></h1>
              <ul class="categories">
              </ul>
							<h2>Description</h2>
								<ul>
	                <li><%= description %></li>
								</ul>
							<h2>Replies</h2>
								<ul>
									<% if (reply_info[0]) { %>
										<% if (paid) { %>
											<ul>
												<% for (var i = 0; i < reply_info.length; i = i + 4) {%>
													<li><%= reply_info[i + 1] %></li>
													<ul>
														<li>Qualifications: <%= reply_info[i + 3] %></li>
				 										<li>Email: <a href="mailto:<%= reply_info[i] %>?Subject=Looking for a <%= search %>"><%= reply_info[i] %></li>
														<li>Referred By: <%= reply_info[i + 2] %></li>
													</ul>
												<% } %>
											</ul>
										<% } else { %>
											<li>You have <%= (reply_info.length)/4 %> replies. Unlock them <a href="/pay?search=<%= search %>"</a>here</li>
										<% } %>
									<% } else { %>
										<li>No Replies Yet</li>
									<% } %>
								</ul>
							<h2><a href="/edit-my-post?search=<%= search %>"</a>Edit</h2>
							<h2><a href="/remove?search=<%= search %>"</a>Delete</h2>
						</div>
					</section>

			</div>

		<!-- Footer -->
			<footer id="footer" class="wrapper alt">
				<div class="inner">
					<ul class="menu">
						<li>&copy; Untitled. All rights reserved.</li><li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
					</ul>
				</div>
			</footer>

		<!-- Scripts -->
			<script src="assets/js/jquery.min.js"></script>
			<script src="assets/js/jquery.scrollex.min.js"></script>
			<script src="assets/js/jquery.scrolly.min.js"></script>
